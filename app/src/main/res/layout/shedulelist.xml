<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/mediumaquamarine">
    <TextView
        android:id="@+id/txt_cid_schedule"
        android:textSize="18sp"
        android:gravity="center"
        android:layout_width="0dp"
        android:layout_height="30dp"
        android:layout_weight="1"
        android:layout_marginLeft="1dp"
        android:layout_marginBottom="1dp"
        android:background="@color/mintcream"
        />
    <TextView
        android:id="@+id/txt_mon_schedule"
        android:textSize="18sp"
        android:gravity="center"
        android:layout_width="0dp"
        android:layout_height="30dp"
        android:layout_weight="2"
        android:layout_marginLeft="1dp"
        android:layout_marginBottom="1dp"
        android:background="@color/mintcream"/>
    <TextView
        android:id="@+id/txt_tue_schedule"
        android:textSize="18sp"
        android:gravity="center"
        android:layout_width="0dp"
        android:layout_height="30dp"
        android:layout_weight="2"
        android:layout_marginLeft="1dp"
        android:layout_marginBottom="1dp"
        android:background="@color/mintcream"/>
    <TextView
        android:id="@+id/txt_wed_schedule"
        android:textSize="18sp"
        android:gravity="center"
        android:layout_width="0dp"
        android:layout_height="30dp"
        android:layout_weight="2"
        android:layout_marginLeft="1dp"
        android:layout_marginBottom="1dp"
        android:background="@color/mintcream"/>
    <TextView
        android:id="@+id/txt_thu_schedule"
        android:textSize="18sp"
        android:gravity="center"
        android:layout_width="0dp"
        android:layout_height="30dp"
        android:layout_weight="2"
        android:layout_marginLeft="1dp"
        android:layout_marginBottom="1dp"
        android:background="@color/mintcream"/>
    <TextView
        android:id="@+id/txt_fri_schedule"
        android:textSize="18sp"
        android:gravity="center"
        android:layout_width="0dp"
        android:layout_height="30dp"
        android:layout_weight="2"
        android:layout_marginLeft="1dp"
        android:layout_marginBottom="1dp"
        android:background="@color/mintcream"/>
</LinearLayout>